.thomasjbradley
.thomasjbradley:link
.thomasjbradley:visited
  display block
  height 31px
  margin -1.375em auto 1.375em
  overflow hidden
  padding 0
  width 17px

  background transparent url("/theme/img/thomasjbradley.png") no-repeat left top

  text-indent -999em

.thomasjbradley:focus
.thomasjbradley:hover
.thomasjbradley:active
  background-position right top

.other-years-wrap
  padding-bottom 2.6875em

  color #ccc
  font italic normal 1em Georgia,sans-serif
  text-align center

.other-years
  display inline
  margin 0
  padding 0

  font-family sans-serif
  font-style normal
  list-style-type none

.other-years li
  display inline
  margin 0
  padding 0

.other-years li:after
  content ", "

.other-years li:last-child:after
  content ""
